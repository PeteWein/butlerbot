{
	"extends": "eslint:recommended",
	"env": {
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 2019
	},
	"rules": {
		"semi": "error",
		"curly": 2,
		"no-multi-str": "error",
		"no-delete-var": "error",
		"no-unused-vars": "error",
		"eol-last": ["error", "always"],
		"key-spacing": ["error", { "beforeColon": false, "afterColon": true }],
		"multiline-comment-style": ["error", "starred-block"],
		"no-mixed-spaces-and-tabs": "error"
	}
}
